<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.ex.AdminNotepMapper">
	
	<select id="getAdminNoteBoard" resultType="HashMap">
		SELECT n_no, oli_no, m.m_name, title, n.reg_date  
		<include refid="adminNoteBoardSQL" />
		ORDER BY n_no DESC
		LIMIT #{nowPage}, #{pageSize}
	</select>
	
	<select id="getAdminNotePostCount" resultType="int">
		SELECT COUNT(*)
		<include refid="adminNoteBoardSQL" />
	</select>
	
	<sql id="adminNoteBoardSQL">
		FROM note n, member m
		WHERE n.m_no = m.m_no
		<if test="searchCategory != null and searchKeyword != null">
			<choose>
				<when test="searchCategory.equals('n_no')">
					AND n.n_no = #{searchKeyword} 
				</when>
				
				<when test="searchCategory.equals('oli_no')">
					AND n.oli_no = #{searchKeyword} 
				</when>
				
				<when test="searchCategory.equals('title')">
					AND n.title LIKE '%${searchKeyword}%' 
				</when>
				
				<when test="searchCategory.equals('m_name')">
					AND m.m_name LIKE '%${searchKeyword}%' 
				</when>
				
				<when test="searchCategory.equals('m_id')">
					AND m.m_id LIKE '%${searchKeyword}%' 
				</when>
			</choose>
		</if>
	</sql>
</mapper>